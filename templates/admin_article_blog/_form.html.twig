{{ form_start(form) }}
    {# {{ form_widget(form) }} #}
    <div class="row justify-content-between align-items-center">
        <div class="col-12 col-md-4 p">
            {{ form_row(form.isActive) }}
            {{ form_row(form.title) }}
            {{ form_row(form.subtitle) }}
        </div>
        <div class="col-12 col-md-6 col-lg-3">
            {# je laisse la condition car l'image n'éxiste pas lors de la création d'une nv catégorie #}
            {% if article_blog.imageName is not null %}
                <a href="{{ asset('images/articleBlog/') ~ article_blog.imageName}}" data-lightbox data-image-alt="{% if article_blog.imageDescription is not null %} {{ article_blog.imageDescription }}{% else %} Image de la catégorie : {{ article_blog.Name}} {% endif %}">
                    <img 
                        class="img-dashboard-upload"
                        src="{{ asset('images/articleBlog/' ~ article_blog.imageName) }}" 
                        alt="{% if article_blog.imageDescription is not null %} {{ article_blog.imageDescription }}
                            {% else %} Image illustrant la catégorie : {{ article_blog.Name}} {% endif %}"
                    /> 
                </a>
            {% endif %}
            {{ form_row(form.imageFile) }}
        </div>
        <div class="col-12 col-lg-5">
            {{ form_row(form.imageDescription) }}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            {{ form_row(form.description) }}            
        </div>
        <div class="col-6 col-md-4">
            {{ form_row(form.signature) }}            
        </div>
    </div>

    {{include("common/_required_message.html.twig")}}

    <button class="btn btn-success mt-3" title="{{ button_label|default('Enregistrer') }}">
        {{ button_label|default('Enregistrer') }}
    </button>

{{ form_end(form) }}
