{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row justify-content-center">
                {# En-tête & titre principal  #}
        <div class="px-md-4 text-center">
            <img src="{{ asset('/images/home_shop.png')}}" alt="image de décoration" style="width: 70%;">            
            <hr class="mt-3">
            <h2 class="mb-2">Nous contacter :</h2>
            <hr class="mb-3">
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-6 p-3">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show text-center" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
    {{ form_start(form) }}
    <div class="row justify-content-center">
        <div class="col-10">
            {{ form_row(form.isUser) }}
        </div>
        <div class="col-10 col-md-5">
            {{ form_row(form.firstname) }}
        </div>
        <div class="col-10 col-md-5">
            {{ form_row(form.lastname) }}
        </div>
        <div class="col-10 col-md-5">
            {{ form_row(form.email) }}
        </div>
        <div class="col-10 col-md-5">
            {{ form_row(form.phoneNumber) }}
        </div>
        <div class="col-10">
            {{ form_row(form.object) }}
            {{ form_row(form.message) }}
        </div>
        {# <div class="col-10 d-none">    
            {{ form_row(form.date) }}
        </div>     #}
        <div class="col-10">    
            <button type="submit" class="btn btn-primary mt-3 mb-5">Envoyer</button>
        </div>        
    </div>
    {{ form_end(form) }}
</div>
    
{% endblock %}
